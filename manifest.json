{
  "manifest_version": 3,
  "name": "Twitch Chat Filter",
  "version": "1.0",
  "description": "A customizable Twitch Web-Chat filtering Extension.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"]
    }
  ]
}